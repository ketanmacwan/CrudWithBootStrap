@model List<CrudWithBootStrap.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>View</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.Name</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-primary">View</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary">Edit</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
